<!--pages/home/index.wxml-->
<view wx:if="{{list.length > 0}}">
  <view bindtap="detail" data-id="{{record.id}}" class="record" wx:for="{{list}}" wx:for-item="record" wx:key="index">
    <view style='height: 30rpx;'>
      <view class="authorLabel">发表人：</view>
      <view class='author'>{{record.openid}}</view>
      <view class='date'>{{record.createdTime}}</view>
    </view>
    <view style='clear: both;'>{{record.content}}</view>
    <view wx:if="{{record.urls}}">
    <image class="img" wx:for="{{record.urls}}" wx:for-item="url" wx:key="index" src='{{apiUrl}}{{url}}'/>
    </view>
  </view>
</view>
<view wx:else class="error">
  {{emptyText}}
</view>
